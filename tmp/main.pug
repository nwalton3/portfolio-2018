mixin image( url, alt, caption )
	- caption = caption || false
	.image.standard
		figure
			img(srcset="/img/400w/" + url +" 400w, /img/800w/" + url +" 800w, /img/1600w/" + url +" 1600w, /img/3200w/" + url +" 3200w" sizes="(max-width: 32em) 100vw, 86vw" src="/img/800w/" + url alt=alt)
			if caption
				figcaption!= alt

mixin image-full( url, alt, caption )
	- caption = caption || false
	.image.full
		figure
			img(srcset="/img/400w/" + url +" 400w, /img/800w/" + url +" 800w, /img/1600w/" + url +" 1600w, /img/3200w/" + url +" 3200w" sizes="(max-width: 72em) 100vw, 90vw" src="/img/800w/" + url alt=alt)
			if caption
				figcaption!= alt


